<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <LinearLayout
        android:id="@+id/linearMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/buttonInfinity"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:src="@drawable/ic_infinity"
            app:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/buttonHappy"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:src="@drawable/ic_happy"
            app:tint="@color/colorAccent" />

        <ImageView
            android:id="@+id/buttonMorning"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:src="@drawable/ic_sun"
            app:tint="@color/colorAccent" />
    </LinearLayout>

    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearMenu"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:text="Hello World!"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="32dp"
        android:gravity="center"
        android:text="Frase"
        android:textSize="22sp" />

    <View
        android:layout_width="128dp"
        android:layout_height="3dp"
        android:layout_below="@id/textPhrase"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:background="@color/colorAccent" />

    <Button
        android:id="@+id/buttonPhrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="32dp"
        android:background="@drawable/ripple_button"
        android:padding="20dp"
        android:text="Nova Frase"
        android:textColor="@color/white" />

</RelativeLayout>